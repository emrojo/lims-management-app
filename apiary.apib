{
    "data": [
        {"key": "key_bool", "value": true},
        {"key": "key_string_2", "value": "new value", "type": "string"}
    ],
    "sample_uuids": [
        "11111111-2222-3333-4444-666666666666", 
        "11111111-2222-3333-4444-777777777777",
        "11111111-2222-3333-4444-888888888888"
